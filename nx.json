{
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  },
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "nxCloudId": "68ee3e38ca41a66a3ff820b7",
  "namedInputs": {
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"],
    "default": ["sharedGlobals"]
  },
  "targetDefaults": {
    "@angular/build:application": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.mjs"
      ]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    }
  },
  "generators": {
    "@nx/angular:application": {
      "e2eTestRunner": "none",
      "linter": "eslint",
      "style": "css",
      "unitTestRunner": "jest"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nx/angular:component": {
      "style": "css"
    }
  },
  "projects": {
    "app1": { "tags": ["scope:app"] },

    "app2": { "tags": ["scope:app"] },

    "ui-shared": { "tags": ["scope:lib"] },

    "utils-common": { "tags": ["scope:utils"] },

    "server": { "tags": ["scope:server"] }
  },

  "dependencyConstraints": [
    {
      "sourceTag": "scope:utils",

      "onlyDependOnLibsWithTags": ["scope:utils"]
    },

    {
      "sourceTag": "scope:lib",

      "onlyDependOnLibsWithTags": ["scope:utils", "scope:lib"]
    },

    {
      "sourceTag": "scope:server",

      "onlyDependOnLibsWithTags": ["scope:utils"]
    },

    {
      "sourceTag": "scope:app",

      "onlyDependOnLibsWithTags": ["scope:utils", "scope:lib", "scope:server"]
    }
  ],
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    }
  ]
}
